<Application x:Class="PixieCursors.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PixieCursors"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:ThemeResources RequestedTheme="Light" AccentColor="#FFFC2A7A"/>
                <hc:Theme/>
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="NotoMusic">./Docs/Noto Music/NotoMusic-Regular.ttf#Noto Music</FontFamily>
            <SolidColorBrush x:Key="Border" Color="#FFE0E0E0"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
